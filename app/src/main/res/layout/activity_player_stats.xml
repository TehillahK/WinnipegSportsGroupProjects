<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.PlayerStatsActivity">
    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:id="@+id/playerProfile"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_label"
        android:text="name"
        android:textSize="30sp"
        android:layout_below="@id/playerProfile"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jane Doe"
        android:layout_toRightOf="@id/name_label"
        android:textSize="30sp"
        android:layout_below="@id/playerProfile"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/games_played"
        android:text="games played"
        android:textSize="30sp"
        android:layout_below="@id/name_label"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_toRightOf="@id/games_played"
        android:textSize="30sp"
        android:layout_below="@id/name_label"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/team_name"
        android:text="team"
        android:textSize="30sp"
        android:layout_below="@id/games_played"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="team A"
        android:layout_toRightOf="@id/name_label"
        android:textSize="30sp"
        android:layout_below="@id/games_played"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_league"
        android:text="league"
        android:textSize="30sp"
        android:layout_below="@id/team_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_toRightOf="@id/player_league"
        android:textSize="30sp"
        android:layout_below="@id/team_name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_position"
        android:text="position"
        android:textSize="30sp"
        android:layout_below="@id/player_league"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RW"
        android:layout_toRightOf="@id/player_position"
        android:textSize="30sp"
        android:layout_below="@id/player_league"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_season_label"
        android:text="season"
        android:textSize="30sp"
        android:layout_below="@id/player_position"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fall"
        android:layout_toRightOf="@+id/game_season_label"
        android:textSize="30sp"
        android:layout_below="@id/player_position"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_age"
        android:text="Age"
        android:textSize="30sp"
        android:layout_below="@id/game_season_label"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27"
        android:layout_toRightOf="@id/player_age"
        android:textSize="30sp"
        android:layout_below="@id/game_season_label"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_goals"
        android:text="goals"
        android:textSize="30sp"
        android:layout_below="@id/player_age"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_toRightOf="@id/player_goals"
        android:textSize="30sp"
        android:layout_below="@id/player_age"

        />

</RelativeLayout>