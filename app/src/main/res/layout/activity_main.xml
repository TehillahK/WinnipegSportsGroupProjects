<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_below="@id/toolbar"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <LinearLayout
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:id="@+id/currentlyPlayingMenu"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="20dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="@string/currently_playing"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:backgroundTint="@color/light_purp"
                    />

                <Button
                    android:id="@+id/teamRostersMenu"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="20dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="@string/team_rosters"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:backgroundTint="@color/light_purp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:id="@+id/soonMenu"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="20dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="PLAYER STATS"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:backgroundTint="@color/light_purp"/>

                <Button
                    android:id="@+id/schedules"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="20dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="SCHEDULES"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:backgroundTint="@color/light_purp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:id="@+id/channels"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="20dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="CHANNELS"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:backgroundTint="@color/light_purp"/>

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="20dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="TRACK LIVE GAME"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:backgroundTint="@color/light_purp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>